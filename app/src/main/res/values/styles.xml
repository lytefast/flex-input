<resources>

    <style name="FlexInput.DialogWhenLarge" parent="Theme.AppCompat.DayNight.DialogWhenLarge">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="flexInputDialogBackground">@color/flexInputDialogBackground</item>
        <item name="flexInputAddContentLauncherTitle">@string/pick_an_app</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">?colorPrimary</item>

        <!--Colors that FlexInput uses by default-->
        <item name="flexInputIconColor">@color/flexInputIconColor</item>
        <item name="flexInputIconColorActivated">@color/flexInputIconColorActivated</item>
        <item name="flexInputIconColorDisabled">@color/flexInputIconColorDisabled</item>
        <item name="flexInputColorHighlight">@color/flexInputColorHighlight</item>
    </style>

    <!-- FlexInput style overrides: implement to customize the look -->
    <style name="FlexInput.Main" parent="AppTheme">
        <item name="android:background">#40000000</item>
    </style>

    <style name="FlexInput.Input.Widget" parent="FlexInput.Input.Base.Widget">
        <item name="android:background">@drawable/rect_rounded_highlight_alpha_20</item>
    </style>

    <style name="FlexInput.AddContent.TabLayout" parent="FlexInput.AddContent.Base.TabLayout">
        <item name="android:background">@drawable/content_tab_background</item>
    </style>

    <style name="FlexInput.Items.File.Name" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!--<style name="FlexInput.Items.File.Path" parent="TextAppearance.AppCompat.Caption">-->
        <!--<item name="android:textColor">@color/colorAccent_alpha_50</item>-->
        <!--<item name="android:textSize">10dp</item>-->
    <!--</style>-->


    <style name="FlexInput.AddContent.Button.Send" parent="FlexInput.AddContent.Button.Base.Send">
        <item name="backgroundTint">#38F</item>
    </style>

</resources>
