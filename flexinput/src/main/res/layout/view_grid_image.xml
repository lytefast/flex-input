<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:padding="4dp"
    tools:layout_width="120dp"
    tools:gravity="center_horizontal">

    <ImageView
        android:id="@+id/item_check_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check_circle_24dp"
        android:tint="@color/selected"
        android:layout_gravity="right|end"
        android:visibility="gone"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/content_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_margin="@dimen/grid_item_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_file_24dp"/>
</FrameLayout>
